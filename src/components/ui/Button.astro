---
interface Props {
  type?: "button" | "submit" | "reset";
}

const { type = "button" } = Astro.props;
---

<button
  type={type}
  class="inline-flex items-center px-6 py-2 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
>
  <slot />
</button>