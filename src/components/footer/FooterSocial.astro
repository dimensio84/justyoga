---
const socialLinks = [
  { platform: 'Instagram', href: '#', icon: '📸' },
  { platform: 'YouTube', href: '#', icon: '▶️' },
  { platform: 'Facebook', href: '#', icon: '👥' }
];
---

<div>
  <h3 class="text-sm font-semibold text-gray-600 tracking-wider uppercase">Follow Us</h3>
  <ul class="mt-4 space-y-4">
    {socialLinks.map(link => (
      <li>
        <a href={link.href} class="text-base text-gray-500 hover:text-gray-900 flex items-center">
          <span class="mr-2">{link.icon}</span>
          {link.platform}
        </a>
      </li>
    ))}
  </ul>
</div>