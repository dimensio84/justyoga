---
interface Props {
  title: string;
  excerpt: string;
  category: string;
  date: string;
  slug: string;
}

const { title, excerpt, category, slug } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden">
  <div class="p-6">
    <span class="text-primary-600 text-sm font-medium">
      {category}
    </span>
    <h3 class="mt-2 text-xl font-semibold text-gray-900">
      <a href={`/blog/${slug}`} class="hover:text-primary-600">
        {title}
      </a>
    </h3>
    <p class="mt-3 text-base text-gray-500">
      {excerpt}
    </p>
    <div class="mt-4">
      <a
        href={`/blog/${slug}`}
        class="text-primary-600 hover:text-primary-700"
      >
        Read more â†’
      </a>
    </div>
  </div>
</article>