---
import ToolCard from './ToolCard.astro';

const tools = [
  {
    title: 'Flexibility Assessment',
    description: 'Get personalized recommendations based on your current flexibility level',
    icon: '📏',
    link: '/tools/flexibility-assessment'
  },
  {
    title: 'Yoga Session Timer',
    description: 'Customizable timer with preset beginner poses and breathing intervals',
    icon: '⏱️',
    link: '/tools/session-timer'
  },
  {
    title: 'Pose Progress Tracker',
    description: 'Track and visualize your improvement in fundamental poses',
    icon: '📈',
    link: '/tools/progress-tracker'
  }
];
---

<section class="py-12 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-2xl sm:text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Interactive Yoga Tools
      </h2>
      <p class="mt-4 max-w-2xl text-lg sm:text-xl text-gray-500 mx-auto">
        Track your progress and enhance your practice with our specialized yoga tools.
      </p>
    </div>

    <div class="mt-10">
      <div class="grid grid-cols-1 gap-6 sm:gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {tools.map(tool => (
          <ToolCard {...tool} />
        ))}
      </div>
    </div>
  </div>
</section>