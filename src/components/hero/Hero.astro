---
import HeroContent from './HeroContent.astro';
import HeroImage from './HeroImage.astro';
---

<section class="relative bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
      <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
        <HeroContent />
      </main>
    </div>
  </div>
  <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 mt-8 lg:mt-0">
    <HeroImage 
      src="https://beginningyoga1-pin.s3.us-west-2.amazonaws.com/beginning-yoga+(47).png"
      alt="Person practicing yoga in a peaceful setting"
    />
  </div>
</section>