---
import Layout from '../../layouts/Layout.astro';
import Tools from '../../components/tools/Tools.astro';

const pageTitle = "Yoga Practice Tools";
const description = "Explore our collection of interactive tools designed to enhance your yoga practice - from flexibility assessment to session timing and progress tracking.";
---

<Layout title={pageTitle} description={description}>
  <main>
    <div class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl mb-4">
            {pageTitle}
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {description}
          </p>
        </div>
      </div>
    </div>
    <Tools />
  </main>
</Layout>