---
import Layout from '../../layouts/Layout.astro';
import YogaTimer from '../../components/tools/timer/YogaTimer';
import TimerContent from '../../components/tools/timer/TimerContent.astro';

const pageTitle = "Yoga Session Timer";
const description = "Create and manage your yoga practice sessions with customizable poses and durations.";
---

<Layout title={pageTitle} description={description}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl mb-4">
          {pageTitle}
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          {description}
        </p>
      </div>

      <div class="bg-white shadow-lg rounded-lg p-8 mb-12">
        <YogaTimer client:load />
      </div>

      <TimerContent />
    </div>
  </div>
</Layout>